<?xml version="1.0" encoding="UTF-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFADB">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_player_vs_player"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/playervsplayer" />

            <ImageView
                android:id="@+id/iv_player_vs_komputer"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/playervscomp" />

            <ImageView
                android:id="@+id/iv_skor"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/skor" />

            <ImageView
                android:id="@+id/iv_pengaturan"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/pengaturan" />

            <ImageView
                android:id="@+id/iv_tentang"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/tentang" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>