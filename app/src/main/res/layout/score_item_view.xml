<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="80dp"
    android:layout_margin="6dp"
    android:padding="16dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_scorecard"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivWinner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="6dp"
            android:contentDescription="@string/wins"
            android:gravity="start"
            android:src="@drawable/ic_score_trophy"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:visibility="invisible"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/tvScoreHead"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_toEndOf="@id/ivWinner"
            android:layout_toRightOf="@id/ivWinner"
            android:fontFamily="@font/comic_sans_ms"
            android:gravity="center"
            android:text="@string/score"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvScoreHead"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@id/tvScoreHead"
            android:layout_toRightOf="@id/tvScoreHead"
            android:fontFamily="@font/comic_sans_ms"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="@tools:sample/last_names" />

        <TextView
            android:id="@+id/tvPlayerHead"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvScore"
            android:layout_margin="6dp"
            android:layout_toEndOf="@id/ivWinner"
            android:layout_toRightOf="@id/ivWinner"
            android:fontFamily="@font/comic_sans_ms"
            android:gravity="start"
            android:text="@string/name"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvScore"
            android:layout_margin="6dp"
            android:layout_toEndOf="@id/tvPlayerHead"
            android:layout_toRightOf="@id/tvPlayerHead"
            android:fontFamily="@font/comic_sans_ms"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="@tools:sample/first_names" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
